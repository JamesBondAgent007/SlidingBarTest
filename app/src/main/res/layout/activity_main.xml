    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:panelHeight="48dp"
        sothree:shadowHeight="4dp"
        sothree:paralaxOffset="100dp"
        sothree:dragView="@+id/dragView"
        android:clipChildren="false" >

        <!-- android:clipChildren="false"
                consente di non nascondere gli overflow della dragView (slidingLayout)
                (COSI FAB RESTA SOPRA LA MAIN CONTENT)
        -->


        <!-- MAIN CONTENT -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <!--FrameLayout ha solo un elemento, qui ci va la mappa-->
            <TextView
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Map will be placed here"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:textSize="16sp"
                android:background="@color/dim_foreground_disabled_material_dark"
            />



        </FrameLayout>


        <!-- SLIDING LAYOUT -->

        <LinearLayout
            android:id="@+id/dragView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eeeeee"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="false"

            >




            <!--Questa è la barra che deve cambiare colore una volta tirata su-->
            <LinearLayout
                android:id="@+id/slidingBar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@android:color/white"
                    > <!--Questo è il colore che deve cambiare-->

                    <!--ci va un imageButton caricando un png (vedi le varie librerie per l'implementazione del FAB), questo è temporaneo-->
                    <!--
                        <Button
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:text="Go"
                        android:id="@+id/button"
                        android:layout_gravity="center"
                        android:background="@drawable/layout_corners_test"
                        android:layout_marginRight="8dp"
                        android:layout_alignParentRight="true"
                    />
                    -->


                    <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:height="68dp"/>


                    <com.example.mr_holmes.slidingbartest.DiscreteSeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:dsb_min="2"
                        app:dsb_max="15"
                    />








                </RelativeLayout>


            </LinearLayout>


            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/pink_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="-70dp"
                fab:fab_icon="@drawable/ic_fab_star"
                fab:fab_colorNormal="@color/pink"
                fab:fab_colorPressed="@color/pink_pressed"
                />



            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/scrollView">

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view"
                    android:layout_gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/info_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/testo"/>
                </android.support.v7.widget.CardView>

            </ScrollView>




        </LinearLayout>


        <!--
        <com.shamanland.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/main"
            android:layout_marginBottom="-32dp"
            android:layout_marginRight="20dp"

            android:src="@drawable/ic_action_my"
            app:floatingActionButtonColor="@color/my_fab_color"
            app:floatingActionButtonSize="mini"
            />
        -->




    </com.sothree.slidinguppanel.SlidingUpPanelLayout>








    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_view"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/layout_searchbar_corners"
    />

</RelativeLayout>